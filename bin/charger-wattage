#!/usr/bin/env bash
#
# Show the wattage of your charger
#
# Copyright 2021-2025, Joe Block <jpb@unixorn.net>

set -o pipefail
if [[ -n "$DEBUG" ]]; then
  set -x
fi

function debug() {
  if [[ -n "$DEBUG" ]]; then
    echo "$@"
  fi
}

function fail() {
  printf '%s\n' "$1" >&2  ## Send message to stderr. Exclude >&2 if you don't want it that way.
  exit "${2-1}"  ## Return a code specified by $2 or 1 by default.
}

function has() {
  # Check if a command is in $PATH
  which "$@" > /dev/null 2>&1
}

function charger-wattage() {
  pmset -g ac | awk '/Wattage/ {print $3}'
}

function only-run-on() {
  if [[ "$(uname -s)" != "$1" ]]; then
    echo "This script only runs on $1"
    exit 1
  fi
}

function check-dependency() {
  if ! (builtin command -V "$1" >/dev/null 2>&1); then
      error "missing dependency: can't find $1 in your PATH"
      exit 1
  fi
}

only-run-on Darwin
check-dependency pmset

charger-wattage
